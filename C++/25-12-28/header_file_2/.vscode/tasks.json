{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ build all",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "*.cpp",
        "-o",
        "main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}